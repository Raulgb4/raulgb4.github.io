---
import { t, type Lang } from "../i18n";

const { lang = "en" } = Astro.props as { lang?: Lang };

const navLinks = [
  { key: "nav.home", href: `/${lang}/` },
  { key: "nav.about", href: `/${lang}/about` },
  { key: "nav.help", href: `/${lang}/help` },
  { key: "nav.experience", href: `/${lang}/experience` },
  { key: "nav.faq", href: `/${lang}/faq` },
  { key: "nav.contact", href: `/${lang}/contact` },
];

const socialLinks = [
  {
    label: "LinkedIn",
    href: "https://www.linkedin.com/in/ra%C3%BAl-garc%C3%ADa-balongo-865948350/",
  },
  { label: "GitHub", href: "https://github.com/Raulgb4" },
];

const email = "raulgarciabalongoes@gmail.com";
---

<footer class="mt-24 border-t border-white/10 bg-slate-950">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Top row -->
    <div
      class="flex flex-col gap-6 py-10 md:flex-row md:items-center md:justify-between"
    >
      <!-- Left: Brand -->
      <a href="/" class="inline-flex items-center gap-2">
        <!-- Left: Name -->
        <div class="font-semibold">
          <span
            class="text-xl md:text-2xl
           bg-linear-to-r from-emerald-400 via-teal-400 to-green-500
           dark:from-emerald-300 dark:via-teal-300 dark:to-green-400
           bg-clip-text text-transparent
           tracking-tight"
          >
            Raúl García Balongo
          </span>
        </div>
      </a>

      <!-- Center: Links -->
      <nav
        class="flex flex-wrap justify-center gap-x-6 gap-y-2 text-lg text-slate-300"
      >
        {
          navLinks.map((l) => (
            <a href={l.href} class="hover:text-emerald-400 transition-colors">
              {t(lang, l.key)}
            </a>
          ))
        }
      </nav>

      <!-- Right: Social -->
      <div
        class="flex items-center justify-center gap-4 text-slate-300 md:justify-end"
      >
        <!-- LinkedIn -->
        <a
          href={socialLinks[0].href}
          aria-label={socialLinks[0].label}
          target="_blank"
          rel="noreferrer"
          class="text-slate-400 hover:text-emerald-400 transition-colors"
        >
          <!-- LinkedIn original logo -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="h-6 w-6"
            aria-hidden="true"
          >
            <path
              d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037
                -1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046
                c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.266 2.37 4.266 5.455v6.286z
                M5.337 7.433c-1.144 0-2.063-.926-2.063-2.065
                0-1.138.92-2.063 2.063-2.063
                1.14 0 2.064.925 2.064 2.063
                0 1.139-.925 2.065-2.064 2.065z
                M7.119 20.452H3.555V9h3.564v11.452z
                M22.225 0H1.771C.792 0 0 .774 0 1.729v20.542
                C0 23.227.792 24 1.771 24h20.451
                C23.2 24 24 23.227 24 22.271V1.729
                C24 .774 23.2 0 22.222 0z"
            ></path>
          </svg>
        </a>

        <!-- GitHub -->
        <a
          href={socialLinks[1].href}
          aria-label={socialLinks[1].label}
          target="_blank"
          rel="noreferrer"
          class="hover:text-emerald-400 transition-colors"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="h-7 w-7"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M12 2C6.477 2 2 6.58 2 12.238c0 4.525 2.865 8.362 6.839 9.718.5.096.682-.22.682-.487 0-.241-.009-.88-.013-1.728-2.782.62-3.369-1.37-3.369-1.37-.455-1.183-1.11-1.498-1.11-1.498-.907-.637.069-.624.069-.624 1.003.073 1.531 1.056 1.531 1.056.892 1.563 2.341 1.112 2.91.85.091-.667.349-1.112.635-1.368-2.22-.26-4.555-1.14-4.555-5.071 0-1.12.39-2.036 1.03-2.754-.103-.26-.447-1.309.098-2.729 0 0 .84-.275 2.75 1.052A9.33 9.33 0 0112 6.844c.85.004 1.705.118 2.505.345 1.909-1.327 2.748-1.052 2.748-1.052.546 1.42.202 2.469.1 2.729.64.718 1.028 1.634 1.028 2.754 0 3.942-2.339 4.808-4.566 5.063.359.316.678.94.678 1.894 0 1.368-.013 2.472-.013 2.808 0 .269.18.588.688.486C19.137 20.596 22 16.76 22 12.238 22 6.58 17.523 2 12 2z"
            ></path>
          </svg>
        </a>

        <!-- Email -->
        <a
          href={`mailto:${email}`}
          aria-label="Email"
          title={email}
          class="hover:text-emerald-400 transition-colors"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            class="h-7 w-7"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15A2.25 2.25 0 002.25 6.75m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.43 4.457a2.25 2.25 0 01-2.31 0L3.32 8.91A2.25 2.25 0 012.25 6.993V6.75"
            ></path>
          </svg>
        </a>
      </div>
    </div>

    <!-- Bottom row -->
    <div
      class="border-t border-white/10 py-6 text-center text-base md:text-lg text-slate-400"
    >
      © {new Date().getFullYear()} Raúl García Balongo. {
        t(lang, "footer.rights")
      }
    </div>
  </div>
</footer>
