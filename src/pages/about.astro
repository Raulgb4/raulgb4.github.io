---
import Layout from "../layouts/Layout.astro";
import Reveal from "../components/Reveal.astro";
---

<Layout>
  <!-- ABOUT HERO -->
  <section class="max-w-6xl mx-auto px-4 pt-24 pb-16">
    <div class="grid items-center gap-10 md:grid-cols-2">
      <!-- Left: text -->
      <Reveal delay={0} class="will-change-transform">
        <div>
          <h1 class="mt-3 text-4xl md:text-5xl font-bold tracking-tight">
            I’m
            <span
              class="bg-linear-to-r from-emerald-400 via-teal-400 to-green-500
                 bg-clip-text text-transparent"
            >
              Raúl García Balongo
            </span>
          </h1>

          <h2 class="mt-3 text-xl md:text-2xl text-gray-700 dark:text-gray-200">
            Computer Science Engineer
          </h2>
        </div>
      </Reveal>

      <!-- Right: image -->
      <Reveal delay={120} class="will-change-transform">
        <div class="flex justify-center md:justify-end">
          <div
            class="group relative w-72.5 sm:w-85 md:w-95
            rounded-2xl border border-emerald-500/30
            bg-white/60 dark:bg-white/5 backdrop-blur
            shadow-lg shadow-emerald-500/10
            transition-all duration-500 ease-out
            hover:-translate-y-1 hover:shadow-emerald-500/20"
          >
            <!-- Glow decorativo -->
            <div
              class="pointer-events-none absolute -top-10 -right-10 h-40 w-40 rounded-full
              bg-emerald-500/20 blur-3xl
              transition-opacity duration-500
              opacity-70 group-hover:opacity-100"
              aria-hidden="true"
            >
            </div>

            <div class="p-3">
              <div
                class="relative overflow-hidden rounded-xl
                border border-gray-200/70 dark:border-white/10
                bg-white"
              >
                <img
                  src="/assets/images/Perfil.jpg"
                  alt="Raúl García Balongo"
                  loading="eager"
                  class="h-80 w-full object-cover
                  transition-transform duration-700 ease-out
                  group-hover:scale-[1.05]"
                />

                <!-- Overlay sutil al hover -->
                <div
                  class="pointer-events-none absolute inset-0
                  bg-linear-to-tr from-emerald-500/10 via-transparent to-transparent
                  opacity-0 transition-opacity duration-500
                  group-hover:opacity-100"
                  aria-hidden="true"
                >
                </div>
              </div>
            </div>
          </div>
        </div>
      </Reveal>
    </div>
  </section>

  <!-- ABOUT CONTENT -->
  <section class="max-w-4xl mx-auto px-4 pt-16 pb-24 space-y-16">
    <!-- ABOUT ME -->
    <section
      class="relative overflow-hidden rounded-3xl border border-gray-200/70 dark:border-white/10
         bg-white/60 dark:bg-white/5 backdrop-blur p-6 md:p-10"
    >
      <!-- Decorative glow -->
      <div
        class="pointer-events-none absolute -top-24 -right-24 h-72 w-72 rounded-full
           bg-emerald-500/20 blur-3xl"
        aria-hidden="true"
      >
      </div>
      <div
        class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full
           bg-teal-500/10 blur-3xl"
        aria-hidden="true"
      >
      </div>

      <div class="grid gap-10 lg:grid-cols-12">
        <!-- LEFT -->
        <Reveal delay={0} class="lg:col-span-7">
          <header class="mb-6">
            <h2 class="mt-4 text-3xl md:text-4xl font-bold tracking-tight">
              Turning data into <span
                class="bg-linear-to-r from-emerald-400 via-teal-400 to-green-500 bg-clip-text text-transparent"
                >decisions</span
              >, and ideas into reliable <span
                class="bg-linear-to-r from-emerald-400 via-teal-400 to-green-500 bg-clip-text text-transparent"
                >products</span
              >.
            </h2>

            <p
              class="mt-4 text-gray-600 dark:text-gray-300 leading-relaxed max-w-2xl"
            >
              Computer Science Engineer (Information Systems) from the
              University of Málaga, focused on data analysis and building
              practical solutions that support decision-making.
            </p>
          </header>

          <!-- Bullets -->
          <ul class="space-y-3 text-gray-700 dark:text-gray-200">
            <li class="flex items-start gap-3">
              <span class="mt-2 h-2 w-2 shrink-0 rounded-full bg-emerald-400/90"
              ></span>
              <span class="leading-relaxed">
                Strong foundation in{" "}
                <span class="font-semibold"
                  >mathematics, statistics, and logical reasoning</span
                >.
              </span>
            </li>

            <li class="flex items-start gap-3">
              <span class="mt-2 h-2 w-2 shrink-0 rounded-full bg-emerald-400/90"
              ></span>
              <span class="leading-relaxed">
                Comfortable with{" "}
                <span class="font-semibold"
                  >Python, SQL, Spark, Power BI, Tableau</span
                >{" "}
                and cloud environments like <span class="font-semibold"
                  >Azure</span
                >.
              </span>
            </li>

            <li class="flex items-start gap-3">
              <span class="mt-2 h-2 w-2 shrink-0 rounded-full bg-emerald-400/90"
              ></span>
              <span class="leading-relaxed">
                Experienced working in teams with{" "}
                <span class="font-semibold">agile workflows</span> and clean, maintainable
                code.
              </span>
            </li>
          </ul>
        </Reveal>

        <!-- RIGHT -->
        <div class="lg:col-span-5 space-y-4">
          <Reveal delay={180}>
            <div
              class="group rounded-2xl border border-gray-200/70 dark:border-white/10
               bg-white/70 dark:bg-white/5 p-5
               hover:-translate-y-1 hover:border-emerald-500/30 transition-all duration-300"
            >
              <div class="flex items-start gap-3">
                <div
                  class="h-10 w-10 shrink-0 rounded-xl bg-emerald-500/15 border border-emerald-500/20 flex items-center justify-center"
                >
                  <span class="text-emerald-600 dark:text-emerald-300">✦</span>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-gray-100">
                    Curiosity
                  </h3>
                  <p class="mt-1 text-gray-600 dark:text-gray-300">
                    I enjoy understanding the <span class="font-medium"
                      >“why” behind the data</span
                    > and exploring patterns.
                  </p>
                </div>
              </div>
            </div>
          </Reveal>

          <Reveal delay={240}>
            <div
              class="group rounded-2xl border border-gray-200/70 dark:border-white/10
               bg-white/70 dark:bg-white/5 p-5
               hover:-translate-y-1 hover:border-emerald-500/30 transition-all duration-300"
            >
              <div class="flex items-start gap-3">
                <div
                  class="h-10 w-10 shrink-0 rounded-xl bg-emerald-500/15 border border-emerald-500/20 flex items-center justify-center"
                >
                  <span class="text-emerald-600 dark:text-emerald-300">⌁</span>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-gray-100">
                    Critical thinking
                  </h3>
                  <p class="mt-1 text-gray-600 dark:text-gray-300">
                    I question conclusions, validate assumptions, and aim for{
                      " "
                    }
                    <span class="font-medium">robust insights</span>.
                  </p>
                </div>
              </div>
            </div>
          </Reveal>

          <Reveal delay={300}>
            <div
              class="group rounded-2xl border border-gray-200/70 dark:border-white/10
               bg-white/70 dark:bg-white/5 p-5
               hover:-translate-y-1 hover:border-emerald-500/30 transition-all duration-300"
            >
              <div class="flex items-start gap-3">
                <div
                  class="h-10 w-10 shrink-0 rounded-xl bg-emerald-500/15 border border-emerald-500/20 flex items-center justify-center"
                >
                  <span class="text-emerald-600 dark:text-emerald-300">↗</span>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-gray-100">
                    Communication
                  </h3>
                  <p class="mt-1 text-gray-600 dark:text-gray-300">
                    I translate technical analysis into <span
                      class="font-medium">clear stories</span
                    >, decisions, and next steps.
                  </p>
                </div>
              </div>
            </div>
          </Reveal>
        </div>
      </div>
    </section>

    <!-- OBJECTIVES -->
    <section
      class="relative overflow-hidden rounded-3xl border border-gray-200/70 dark:border-white/10
         bg-white/60 dark:bg-white/5 backdrop-blur p-6 md:p-8"
    >
      <!-- Decorative glow -->
      <div
        class="pointer-events-none absolute -top-24 -right-24 h-72 w-72 rounded-full
           bg-emerald-500/15 blur-3xl"
        aria-hidden="true"
      >
      </div>
      <div
        class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full
           bg-teal-500/10 blur-3xl"
        aria-hidden="true"
      >
      </div>

      <!-- Header -->
      <Reveal delay={0}>
        <div class="flex items-start justify-between gap-6">
          <div>
            <h2
              class="mt-3 text-2xl md:text-3xl font-bold tracking-tight text-gray-900 dark:text-gray-100"
            >
              Where I’m heading next
            </h2>
          </div>
        </div>
      </Reveal>

      <!-- Main highlight -->
      <Reveal delay={120}>
        <div
          class="mt-6 relative rounded-2xl border border-emerald-200/70 dark:border-emerald-500/20
             bg-emerald-50/60 dark:bg-emerald-500/10 p-5 md:p-6"
        >
          <div
            class="pointer-events-none absolute inset-0 rounded-2xl
               bg-linear-to-r from-emerald-500/10 via-transparent to-transparent"
            aria-hidden="true"
          >
          </div>

          <p class="relative text-gray-800 dark:text-gray-100 leading-relaxed">
            My goal is to join a team as a <span class="font-semibold"
              >junior profile</span
            >, contributing from day one to real-world projects while building a
            solid career in
            <span class="font-semibold">Data Analysis</span>, <span
              class="font-semibold">Business Intelligence</span
            >,
            <span class="font-semibold">data-oriented development</span>, and
            <span class="font-semibold">web development</span>.
          </p>
        </div>
      </Reveal>

      <!-- Cards -->
      <div class="mt-6 grid gap-4 md:grid-cols-3">
        <!-- What I'm looking for -->
        <Reveal delay={200}>
          <div
            class="group rounded-2xl border border-gray-200/70 dark:border-white/10
               bg-white/70 dark:bg-white/5 p-5
               hover:-translate-y-1 hover:border-emerald-500/30
               hover:shadow-lg hover:shadow-emerald-500/10
               transition-all duration-300"
          >
            <div class="flex items-center gap-2">
              <span
                class="inline-flex h-9 w-9 items-center justify-center rounded-xl
                   bg-emerald-500/10 text-emerald-600 dark:text-emerald-300
                   border border-emerald-500/20
                   group-hover:bg-emerald-500/15 transition"
              >
                <!-- icon: target -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <circle cx="12" cy="12" r="9"></circle>
                  <circle cx="12" cy="12" r="5"></circle>
                  <path d="M12 7v5l3 3"></path>
                </svg>
              </span>
              <h3 class="font-semibold text-gray-900 dark:text-gray-100">
                What I’m looking for
              </h3>
            </div>

            <p class="mt-3 text-gray-600 dark:text-gray-300 leading-relaxed">
              A <span class="font-medium">stable full-time</span> role with responsibility,
              continuous learning, and real production impact.
            </p>
          </div>
        </Reveal>

        <!-- What I’m not pursuing -->
        <Reveal delay={260}>
          <div
            class="group rounded-2xl border border-gray-200/70 dark:border-white/10
               bg-white/70 dark:bg-white/5 p-5
               hover:-translate-y-1 hover:border-gray-400/40
               hover:shadow-lg hover:shadow-black/5
               transition-all duration-300"
          >
            <div class="flex items-center gap-2">
              <span
                class="inline-flex h-9 w-9 items-center justify-center rounded-xl
                   bg-gray-500/10 text-gray-700 dark:text-gray-200
                   border border-gray-500/20"
              >
                <!-- icon: ban -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <circle cx="12" cy="12" r="9"></circle>
                  <path d="M5.5 5.5l13 13"></path>
                </svg>
              </span>
              <h3 class="font-semibold text-gray-900 dark:text-gray-100">
                Not my focus now
              </h3>
            </div>

            <ul class="mt-3 space-y-2 text-gray-600 dark:text-gray-300">
              <li class="flex items-baseline gap-2">
                <span class="inline-block h-1.5 w-1.5 rounded-full bg-gray-400"
                ></span>
                <span>Standalone training programs</span>
              </li>
              <li class="flex items-baseline gap-2">
                <span class="inline-block h-1.5 w-1.5 rounded-full bg-gray-400"
                ></span>
                <span>Master’s or PhD programs</span>
              </li>
              <li class="flex items-baseline gap-2">
                <span class="inline-block h-1.5 w-1.5 rounded-full bg-gray-400"
                ></span>
                <span>Purely academic paths</span>
              </li>
            </ul>
          </div>
        </Reveal>

        <!-- Motivation -->
        <Reveal delay={320}>
          <div
            class="group rounded-2xl border border-gray-200/70 dark:border-white/10
               bg-white/70 dark:bg-white/5 p-5
               hover:-translate-y-1 hover:border-emerald-500/30
               hover:shadow-lg hover:shadow-emerald-500/10
               transition-all duration-300"
          >
            <div class="flex items-center gap-2">
              <span
                class="inline-flex h-9 w-9 items-center justify-center rounded-xl
                   bg-emerald-500/10 text-emerald-600 dark:text-emerald-300
                   border border-emerald-500/20
                   group-hover:bg-emerald-500/15 transition"
              >
                <!-- icon: spark -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    d="M12 2l1.5 6L20 10l-6.5 2L12 22l-1.5-10L4 10l6.5-2L12 2z"
                  ></path>
                </svg>
              </span>
              <h3 class="font-semibold text-gray-900 dark:text-gray-100">
                Motivation
              </h3>
            </div>

            <p class="mt-3 text-gray-600 dark:text-gray-300 leading-relaxed">
              Roles that combine <span class="font-medium">analysis</span> and
              <span class="font-medium">visualization</span> where data supports decisions
              and improves products, processes, or services.
            </p>
          </div>
        </Reveal>
      </div>
    </section>

    <!-- SOFT SKILLS -->
    <section
      class="relative overflow-hidden rounded-3xl border border-gray-200/70 dark:border-white/10
         bg-white/60 dark:bg-white/5 backdrop-blur p-6 md:p-8"
    >
      <!-- Decorative glow -->
      <div
        class="pointer-events-none absolute -top-24 -right-24 h-72 w-72 rounded-full
           bg-emerald-500/15 blur-3xl"
        aria-hidden="true"
      >
      </div>
      <div
        class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full
           bg-teal-500/10 blur-3xl"
        aria-hidden="true"
      >
      </div>

      <!-- Header -->
      <Reveal delay={0}>
        <header class="mb-6">
          <h2
            class="mt-3 text-2xl md:text-3xl font-bold tracking-tight text-gray-900 dark:text-gray-100"
          >
            How I work with teams and challenges
          </h2>
        </header>
      </Reveal>

      <!-- Skill cards -->
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 lg:auto-rows-fr">
        <!-- Analytical & structured -->
        <Reveal delay={120}>
          <article
            class="group relative overflow-hidden rounded-2xl
               border border-gray-200/70 dark:border-white/10
               bg-white/70 dark:bg-white/5 backdrop-blur p-6
               shadow-sm transition-all duration-300
               hover:-translate-y-1 hover:shadow-xl hover:shadow-emerald-500/10
               hover:border-emerald-500/40"
          >
            <div
              class="pointer-events-none absolute -top-16 -right-16 h-44 w-44 rounded-full
                 bg-emerald-500/20 blur-3xl opacity-0 transition-opacity duration-300
                 group-hover:opacity-100"
              aria-hidden="true"
            >
            </div>

            <div
              class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-xl
                 bg-emerald-500/12 text-emerald-600 dark:text-emerald-400
                 border border-emerald-500/15
                 transition-transform duration-300 group-hover:scale-[1.05]"
              aria-hidden="true"
            >
              <!-- Chart icon -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                class="h-6 w-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3 3v18h18"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M7 14l3-3 3 2 4-6"></path>
              </svg>
            </div>

            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
              Analytical & structured thinking
            </h3>
            <p class="mt-2 text-gray-600 dark:text-gray-300 leading-relaxed">
              I break complex problems into clear steps and deliver solutions
              with a results-oriented mindset.
            </p>

            <div
              class="mt-4 h-px w-full bg-linear-to-r from-transparent via-emerald-500/25 to-transparent
                 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
              aria-hidden="true"
            >
            </div>
          </article>
        </Reveal>

        <!-- Consistency -->
        <Reveal delay={170}>
          <article
            class="group relative overflow-hidden rounded-2xl
               border border-gray-200/70 dark:border-white/10
               bg-white/70 dark:bg-white/5 backdrop-blur p-6
               shadow-sm transition-all duration-300
               hover:-translate-y-1 hover:shadow-xl hover:shadow-emerald-500/10
               hover:border-emerald-500/40"
          >
            <div
              class="pointer-events-none absolute -top-16 -right-16 h-44 w-44 rounded-full
                 bg-emerald-500/20 blur-3xl opacity-0 transition-opacity duration-300
                 group-hover:opacity-100"
              aria-hidden="true"
            >
            </div>

            <div
              class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-xl
                 bg-emerald-500/12 text-emerald-600 dark:text-emerald-400
                 border border-emerald-500/15
                 transition-transform duration-300 group-hover:scale-[1.05]"
              aria-hidden="true"
            >
              <!-- Bolt icon -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                class="h-6 w-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M13 2L3 14h7l-1 8 10-12h-7l1-8z"></path>
              </svg>
            </div>

            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
              Consistency & perseverance
            </h3>
            <p class="mt-2 text-gray-600 dark:text-gray-300 leading-relaxed">
              I stay focused under pressure and keep pushing until the solution
              is solid and production-ready.
            </p>

            <div
              class="mt-4 h-px w-full bg-linear-to-r from-transparent via-emerald-500/25 to-transparent
                 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
              aria-hidden="true"
            >
            </div>
          </article>
        </Reveal>

        <!-- Communication -->
        <Reveal delay={220}>
          <article
            class="group relative overflow-hidden rounded-2xl
               border border-gray-200/70 dark:border-white/10
               bg-white/70 dark:bg-white/5 backdrop-blur p-6
               shadow-sm transition-all duration-300
               hover:-translate-y-1 hover:shadow-xl hover:shadow-emerald-500/10
               hover:border-emerald-500/40"
          >
            <div
              class="pointer-events-none absolute -top-16 -right-16 h-44 w-44 rounded-full
                 bg-emerald-500/20 blur-3xl opacity-0 transition-opacity duration-300
                 group-hover:opacity-100"
              aria-hidden="true"
            >
            </div>

            <div
              class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-xl
                 bg-emerald-500/12 text-emerald-600 dark:text-emerald-400
                 border border-emerald-500/15
                 transition-transform duration-300 group-hover:scale-[1.05]"
              aria-hidden="true"
            >
              <!-- Chat icon -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                class="h-6 w-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M7.5 8.25h9m-9 3h6m-7.5 9l3.2-2.4c.4-.3.9-.5 1.4-.5H19.5A2.25 2.25 0 0021.75 15V6.75A2.25 2.25 0 0019.5 4.5H4.5A2.25 2.25 0 002.25 6.75v9A2.25 2.25 0 004.5 18h.75c.8 0 1.5.7 1.5 1.5v1.75z"
                ></path>
              </svg>
            </div>

            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
              Communication & collaboration
            </h3>
            <p class="mt-2 text-gray-600 dark:text-gray-300 leading-relaxed">
              I communicate clearly and align solutions with both technical and
              business needs.
            </p>

            <div
              class="mt-4 h-px w-full bg-linear-to-r from-transparent via-emerald-500/25 to-transparent
                 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
              aria-hidden="true"
            >
            </div>
          </article>
        </Reveal>

        <!-- Planning -->
        <Reveal delay={270}>
          <article
            class="group relative overflow-hidden rounded-2xl
               border border-gray-200/70 dark:border-white/10
               bg-white/70 dark:bg-white/5 backdrop-blur p-6
               shadow-sm transition-all duration-300
               hover:-translate-y-1 hover:shadow-xl hover:shadow-emerald-500/10
               hover:border-emerald-500/40"
          >
            <div
              class="pointer-events-none absolute -top-16 -right-16 h-44 w-44 rounded-full
                 bg-emerald-500/20 blur-3xl opacity-0 transition-opacity duration-300
                 group-hover:opacity-100"
              aria-hidden="true"
            >
            </div>

            <div
              class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-xl
                 bg-emerald-500/12 text-emerald-600 dark:text-emerald-400
                 border border-emerald-500/15
                 transition-transform duration-300 group-hover:scale-[1.05]"
              aria-hidden="true"
            >
              <!-- Calendar icon -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                class="h-6 w-6"
              >
                <path
