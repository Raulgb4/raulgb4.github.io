---
import Layout from "../../layouts/Layout.astro";
import Reveal from "../../components/Reveal.astro";
import { LANGS, type Lang, t } from "../../i18n";

const lang = Astro.params.lang as Lang;

export async function getStaticPaths() {
  return LANGS.map((lang) => ({ params: { lang } }));
}

const pageSeo = {
  en: {
    title: "About Me | Raúl García Balongo",
    description:
      "Professional background, mindset, and strengths with a focus on data analysis and software development.",
  },
  es: {
    title: "Sobre mí | Raúl García Balongo",
    description:
      "Perfil profesional, mentalidad y fortalezas con enfoque en análisis de datos y desarrollo de software.",
  },
};
---

<!--
  About.astro
  -----------
  Internationalized "About" page that presents personal and professional
  background, role, and mindset. It generates static paths for each supported
  language, defines page-level SEO metadata, and uses shared layout and
  animation components to deliver a consistent, responsive experience.
-->
<Layout lang={lang} pageSeo={pageSeo}>
  <!-- ABOUT HERO -->
  <section class="max-w-6xl mx-auto px-4 pt-24 pb-16">
    <div class="grid items-center gap-10 md:grid-cols-2">
      <!-- Left: text -->
      <Reveal delay={0} class="will-change-transform">
        <div>
          <h1 class="mt-3 text-4xl md:text-5xl font-bold tracking-tight">
            {t(lang, "about.hero.intro")}
            <span
              class="bg-linear-to-r from-emerald-400 via-teal-400 to-green-500
                 bg-clip-text text-transparent"
            >
              Raúl García Balongo
            </span>
          </h1>

          <h2 class="mt-3 text-xl md:text-2xl text-gray-700 dark:text-gray-200">
            {t(lang, "about.hero.role")}
          </h2>
        </div>
      </Reveal>

      <!-- Right: image -->
      <Reveal delay={120} class="will-change-transform">
        <div class="flex justify-center md:justify-end">
          <div
            class="group relative w-72.5 sm:w-85 md:w-95
            rounded-2xl border border-emerald-500/30
            bg-white/60 dark:bg-white/5 backdrop-blur
            shadow-lg shadow-emerald-500/10
            transition-all duration-500 ease-out
            hover:-translate-y-1 hover:shadow-emerald-500/20"
          >
            <!-- Glow decorativo -->
            <div
              class="pointer-events-none absolute -top-10 -right-10 h-40 w-40 rounded-full
              bg-emerald-500/20 blur-3xl
              transition-opacity duration-500
              opacity-70 group-hover:opacity-100"
              aria-hidden="true"
            >
            </div>

            <div class="p-3">
              <div
                class="relative overflow-hidden rounded-xl
                border border-gray-200/70 dark:border-white/10
                bg-white"
              >
                <img
                  src="/assets/images/Perfil.jpg"
                  alt="Raúl García Balongo"
                  loading="eager"
                  class="h-80 w-full object-cover
                  transition-transform duration-700 ease-out
                  group-hover:scale-[1.05]"
                />

                <!-- Overlay sutil al hover -->
                <div
                  class="pointer-events-none absolute inset-0
                  bg-linear-to-tr from-emerald-500/10 via-transparent to-transparent
                  opacity-0 transition-opacity duration-500
                  group-hover:opacity-100"
                  aria-hidden="true"
                >
                </div>
              </div>
            </div>
          </div>
        </div>
      </Reveal>
    </div>
  </section>

  <!-- ABOUT CONTENT -->
  <section class="max-w-4xl mx-auto px-4 pt-16 pb-24 space-y-16">
    <!-- ABOUT ME -->
    <section
      class="relative overflow-hidden rounded-3xl border border-gray-200/70 dark:border-white/10
         bg-white/60 dark:bg-white/5 backdrop-blur p-6 md:p-10"
    >
      <!-- Decorative glow -->
      <div
        class="pointer-events-none absolute -top-24 -right-24 h-72 w-72 rounded-full
           bg-emerald-500/20 blur-3xl"
        aria-hidden="true"
      >
      </div>
      <div
        class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full
           bg-teal-500/10 blur-3xl"
        aria-hidden="true"
      >
      </div>

      <div class="grid gap-10 lg:grid-cols-12">
        <!-- LEFT -->
        <Reveal delay={0} class="lg:col-span-7">
          <header class="mb-6">
            <h2 class="mt-4 text-3xl md:text-4xl font-bold tracking-tight">
              {t(lang, "home.hero.title.beforeDecisions")}
              <span
                class="bg-linear-to-r from-emerald-400 via-teal-400 to-green-500 bg-clip-text text-transparent"
              >
                {t(lang, "home.hero.title.decisions")}
              </span>
              {t(lang, "home.hero.title.middle")}
              <span
                class="bg-linear-to-r from-emerald-400 via-teal-400 to-green-500 bg-clip-text text-transparent"
              >
                {t(lang, "home.hero.title.products")}
              </span>
              {t(lang, "home.hero.title.afterProducts")}
            </h2>

            <p
              class="mt-4 text-base md:text-lg text-gray-600 dark:text-gray-300 leading-relaxed max-w-2xl"
            >
              {t(lang, "home.hero.subtitle")}
            </p>
          </header>

          <!-- Bullets -->
          <ul
            class="space-y-3 text-base md:text-lg text-gray-700 dark:text-gray-200"
          >
            <li class="flex items-start gap-3">
              <span class="mt-2 h-2 w-2 shrink-0 rounded-full bg-emerald-400/90"
              ></span>
              <span class="leading-relaxed">
                {t(lang, "home.hero.bullets.1.before")}
                <span class="font-semibold"
                  >{t(lang, "home.hero.bullets.1.highlight")}</span
                >.
              </span>
            </li>

            <li class="flex items-start gap-3">
              <span class="mt-2 h-2 w-2 shrink-0 rounded-full bg-emerald-400/90"
              ></span>
              <span class="leading-relaxed">
                {t(lang, "home.hero.bullets.2.before")}
                <span class="font-semibold"
                  >{t(lang, "home.hero.bullets.2.tech")}</span
                >
                {t(lang, "home.hero.bullets.2.middle")}
                <span class="font-semibold"
                  >{t(lang, "home.hero.bullets.2.cloud")}</span
                >.
              </span>
            </li>

            <li class="flex items-start gap-3">
              <span class="mt-2 h-2 w-2 shrink-0 rounded-full bg-emerald-400/90"
              ></span>
              <span class="leading-relaxed">
                {t(lang, "home.hero.bullets.3.before")}
                <span class="font-semibold"
                  >{t(lang, "home.hero.bullets.3.highlight")}</span
                >
                {t(lang, "home.hero.bullets.3.after")}
              </span>
            </li>
          </ul>
        </Reveal>

        <!-- RIGHT -->
        <div class="lg:col-span-5 space-y-4">
          <Reveal delay={180}>
            <div
              class="group rounded-2xl border border-gray-200/70 dark:border-white/10
               bg-white/70 dark:bg-white/5 p-5
               hover:-translate-y-1 hover:border-emerald-500/30 transition-all duration-300"
            >
              <div class="flex items-start gap-3">
                <div
                  class="h-10 w-10 shrink-0 rounded-xl bg-emerald-500/15 border border-emerald-500/20 flex items-center justify-center"
                >
                  <span class="text-emerald-600 dark:text-emerald-300">✦</span>
                </div>
                <div>
                  <h3
                    class="text-base md:text-lg font-semibold text-gray-900 dark:text-gray-100"
                  >
                    {t(lang, "home.traits.curiosity.title")}
                  </h3>
                  <p
                    class="mt-1 text-sm md:text-base text-gray-600 dark:text-gray-300 leading-relaxed"
                  >
                    {t(lang, "home.traits.curiosity.beforeWhy")}
                    <span class="font-medium"
                      >{t(lang, "home.traits.curiosity.why")}</span
                    >
                    {t(lang, "home.traits.curiosity.afterWhy")}
                  </p>
                </div>
              </div>
            </div>
          </Reveal>

          <Reveal delay={240}>
            <div
              class="group rounded-2xl border border-gray-200/70 dark:border-white/10
               bg-white/70 dark:bg-white/5 p-5
               hover:-translate-y-1 hover:border-emerald-500/30 transition-all duration-300"
            >
              <div class="flex items-start gap-3">
                <div
                  class="h-10 w-10 shrink-0 rounded-xl bg-emerald-500/15 border border-emerald-500/20 flex items-center justify-center"
                >
                  <span class="text-emerald-600 dark:text-emerald-300">⌁</span>
                </div>
                <div>
                  <h3
                    class="text-base md:text-lg font-semibold text-gray-900 dark:text-gray-100"
                  >
                    {t(lang, "home.traits.criticalThinking.title")}
                  </h3>
                  <p
                    class="mt-1 text-sm md:text-base text-gray-600 dark:text-gray-300 leading-relaxed"
                  >
                    {t(lang, "home.traits.criticalThinking.before")}
                    <span class="font-medium"
                      >{t(lang, "home.traits.criticalThinking.highlight")}</span
                    >.
                  </p>
                </div>
              </div>
            </div>
          </Reveal>

          <Reveal delay={300}>
            <div
              class="group rounded-2xl border border-gray-200/70 dark:border-white/10
               bg-white/70 dark:bg-white/5 p-5
               hover:-translate-y-1 hover:border-emerald-500/30 transition-all duration-300"
            >
              <div class="flex items-start gap-3">
                <div
                  class="h-10 w-10 shrink-0 rounded-xl bg-emerald-500/15 border border-emerald-500/20 flex items-center justify-center"
                >
                  <span class="text-emerald-600 dark:text-emerald-300">↗</span>
                </div>
                <div>
                  <h3
                    class="text-base md:text-lg font-semibold text-gray-900 dark:text-gray-100"
                  >
                    {t(lang, "home.traits.communication.title")}
                  </h3>
                  <p
                    class="mt-1 text-sm md:text-base text-gray-600 dark:text-gray-300 leading-relaxed"
                  >
                    {t(lang, "home.traits.communication.before")}
                    <span class="font-medium"
                      >{t(lang, "home.traits.communication.highlight")}</span
                    >
                    {t(lang, "home.traits.communication.after")}
                  </p>
                </div>
              </div>
            </div>
          </Reveal>
        </div>
      </div>
    </section>

    <!-- OBJECTIVES -->
    <section
      class="relative overflow-hidden rounded-3xl border border-gray-200/70 dark:border-white/10
         bg-white/60 dark:bg-white/5 backdrop-blur p-6 md:p-8"
    >
      <!-- Decorative glow -->
      <div
        class="pointer-events-none absolute -top-24 -right-24 h-72 w-72 rounded-full
           bg-emerald-500/15 blur-3xl"
        aria-hidden="true"
      >
      </div>
      <div
        class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full
           bg-teal-500/10 blur-3xl"
        aria-hidden="true"
      >
      </div>

      <!-- Header -->
      <Reveal delay={0}>
        <div class="flex items-start justify-between gap-6">
          <div>
            <h2
              class="mt-3 text-2xl md:text-3xl font-bold tracking-tight text-gray-900 dark:text-gray-100"
            >
              {t(lang, "home.next.title")}
            </h2>
          </div>
        </div>
      </Reveal>

      <!-- Main highlight -->
      <Reveal delay={120}>
        <div
          class="mt-6 relative rounded-2xl border border-emerald-200/70 dark:border-emerald-500/20
           bg-emerald-50/60 dark:bg-emerald-500/10 p-5 md:p-6"
        >
          <div
            class="pointer-events-none absolute inset-0 rounded-2xl
             bg-linear-to-r from-emerald-500/10 via-transparent to-transparent"
            aria-hidden="true"
          >
          </div>

          <p
            class="relative text-base md:text-lg
             text-gray-800 dark:text-gray-100 leading-relaxed"
          >
            {t(lang, "home.next.beforeJunior")}
            <span class="font-semibold">{t(lang, "home.next.junior")}</span>
            {t(lang, "home.next.middle")}
            <span class="font-semibold"
              >{t(lang, "home.next.dataAnalysis")}</span
            >,
            <span class="font-semibold"
              >{t(lang, "home.next.businessIntelligence")}</span
            >,
            <span class="font-semibold"
              >{t(lang, "home.next.dataOrientedDev")}</span
            >
            {t(lang, "home.next.and")}
            <span class="font-semibold">{t(lang, "home.next.webDev")}</span>.
          </p>
        </div>
      </Reveal>

      <!-- Cards -->
      <div class="mt-6 grid gap-4 md:grid-cols-3">
        <!-- What I'm looking for -->
        <Reveal delay={200}>
          <div
            class="group rounded-2xl border border-gray-200/70 dark:border-white/10
             bg-white/70 dark:bg-white/5 p-5
             hover:-translate-y-1 hover:border-emerald-500/30
             hover:shadow-lg hover:shadow-emerald-500/10
             transition-all duration-300"
          >
            <div class="flex items-center gap-2">
              <span
                class="inline-flex h-9 w-9 items-center justify-center rounded-xl
                 bg-emerald-500/10 text-emerald-600 dark:text-emerald-300
                 border border-emerald-500/20
                 group-hover:bg-emerald-500/15 transition"
              >
                <!-- icon: target -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <circle cx="12" cy="12" r="9"></circle>
                  <circle cx="12" cy="12" r="5"></circle>
                  <path d="M12 7v5l3 3"></path>
                </svg>
              </span>
              <h3
                class="text-base md:text-lg font-semibold text-gray-900 dark:text-gray-100"
              >
                {t(lang, "home.cards.lookingFor.title")}
              </h3>
            </div>

            <p
              class="mt-3 text-sm md:text-base text-gray-600 dark:text-gray-300 leading-relaxed"
            >
              {t(lang, "home.cards.lookingFor.before")}
              <span class="font-medium"
                >{t(lang, "home.cards.lookingFor.highlight")}</span
              >
              {t(lang, "home.cards.lookingFor.after")}
            </p>
          </div>
        </Reveal>

        <!-- What I’m not pursuing -->
        <Reveal delay={260}>
          <div
            class="group rounded-2xl border border-gray-200/70 dark:border-white/10
             bg-white/70 dark:bg-white/5 p-5
             hover:-translate-y-1 hover:border-gray-400/40
             hover:shadow-lg hover:shadow-black/5
             transition-all duration-300"
          >
            <div class="flex items-center gap-2">
              <span
                class="inline-flex h-9 w-9 items-center justify-center rounded-xl
                 bg-gray-500/10 text-gray-700 dark:text-gray-200
                 border border-gray-500/20"
              >
                <!-- icon: ban -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <circle cx="12" cy="12" r="9"></circle>
                  <path d="M5.5 5.5l13 13"></path>
                </svg>
              </span>
              <h3
                class="text-base md:text-lg font-semibold text-gray-900 dark:text-gray-100"
              >
                {t(lang, "home.cards.notFocus.title")}
              </h3>
            </div>

            <ul
              class="mt-3 space-y-2 text-sm md:text-base text-gray-600 dark:text-gray-300"
            >
              <li class="flex items-baseline gap-2">
                <span class="inline-block h-1.5 w-1.5 rounded-full bg-gray-400"
                ></span>
                <span>{t(lang, "home.cards.notFocus.item1")}</span>
              </li>
              <li class="flex items-baseline gap-2">
                <span class="inline-block h-1.5 w-1.5 rounded-full bg-gray-400"
                ></span>
                <span>{t(lang, "home.cards.notFocus.item2")}</span>
              </li>
              <li class="flex items-baseline gap-2">
                <span class="inline-block h-1.5 w-1.5 rounded-full bg-gray-400"
                ></span>
                <span>{t(lang, "home.cards.notFocus.item3")}</span>
              </li>
            </ul>
          </div>
        </Reveal>

        <!-- Motivation -->
        <Reveal delay={320}>
          <div
            class="group rounded-2xl border border-gray-200/70 dark:border-white/10
             bg-white/70 dark:bg-white/5 p-5
             hover:-translate-y-1 hover:border-emerald-500/30
             hover:shadow-lg hover:shadow-emerald-500/10
             transition-all duration-300"
          >
            <div class="flex items-center gap-2">
              <span
                class="inline-flex h-9 w-9 items-center justify-center rounded-xl
                 bg-emerald-500/10 text-emerald-600 dark:text-emerald-300
                 border border-emerald-500/20
                 group-hover:bg-emerald-500/15 transition"
              >
                <!-- icon: spark -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    d="M12 2l1.5 6L20 10l-6.5 2L12 22l-1.5-10L4 10l6.5-2L12 2z"
                  ></path>
                </svg>
              </span>
              <h3
                class="text-base md:text-lg font-semibold text-gray-900 dark:text-gray-100"
              >
                {t(lang, "home.cards.motivation.title")}
              </h3>
            </div>

            <p
              class="mt-3 text-sm md:text-base text-gray-600 dark:text-gray-300 leading-relaxed"
            >
              {t(lang, "home.cards.motivation.before")}
              <span class="font-medium"
                >{t(lang, "home.cards.motivation.analysis")}</span
              >
              {t(lang, "home.cards.motivation.middle")}
              <span class="font-medium"
                >{t(lang, "home.cards.motivation.visualization")}</span
              >
              {t(lang, "home.cards.motivation.after")}
            </p>
          </div>
        </Reveal>
      </div>
    </section>

    <!-- SOFT SKILLS -->
    <section
      class="relative overflow-hidden rounded-3xl border border-gray-200/70 dark:border-white/10
         bg-white/60 dark:bg-white/5 backdrop-blur p-6 md:p-8"
    >
      <!-- Decorative glow -->
      <div
        class="pointer-events-none absolute -top-24 -right-24 h-72 w-72 rounded-full
           bg-emerald-500/15 blur-3xl"
        aria-hidden="true"
      >
      </div>
      <div
        class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full
           bg-teal-500/10 blur-3xl"
        aria-hidden="true"
      >
      </div>

      <!-- Header -->
      <Reveal delay={0}>
        <header class="mb-6">
          <h2
            class="mt-3 text-2xl md:text-3xl font-bold tracking-tight text-gray-900 dark:text-gray-100"
          >
            {t(lang, "home.work.title")}
          </h2>
        </header>
      </Reveal>

      <!-- Skill cards -->
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 lg:auto-rows-fr">
        <!-- Analytical & structured -->
        <Reveal delay={120}>
          <article
            class="group relative overflow-hidden rounded-2xl
           border border-gray-200/70 dark:border-white/10
           bg-white/70 dark:bg-white/5 backdrop-blur p-6
           shadow-sm transition-all duration-300
           hover:-translate-y-1 hover:shadow-xl hover:shadow-emerald-500/10
           hover:border-emerald-500/40"
          >
            <div
              class="pointer-events-none absolute -top-16 -right-16 h-44 w-44 rounded-full
             bg-emerald-500/20 blur-3xl opacity-0 transition-opacity duration-300
             group-hover:opacity-100"
              aria-hidden="true"
            >
            </div>

            <div
              class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-xl
             bg-emerald-500/12 text-emerald-600 dark:text-emerald-400
             border border-emerald-500/15
             transition-transform duration-300 group-hover:scale-[1.05]"
              aria-hidden="true"
            >
              <!-- Chart icon -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                class="h-6 w-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3 3v18h18"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M7 14l3-3 3 2 4-6"></path>
              </svg>
            </div>

            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
              {t(lang, "home.work.cards.analytical.title")}
            </h3>
            <p class="mt-2 text-gray-600 dark:text-gray-300 leading-relaxed">
              {t(lang, "home.work.cards.analytical.text")}
            </p>

            <div
              class="mt-4 h-px w-full bg-linear-to-r from-transparent via-emerald-500/25 to-transparent
             opacity-0 transition-opacity duration-300 group-hover:opacity-100"
              aria-hidden="true"
            >
            </div>
          </article>
        </Reveal>

        <!-- Consistency -->
        <Reveal delay={170}>
          <article
            class="group relative overflow-hidden rounded-2xl
           border border-gray-200/70 dark:border-white/10
           bg-white/70 dark:bg-white/5 backdrop-blur p-6
           shadow-sm transition-all duration-300
           hover:-translate-y-1 hover:shadow-xl hover:shadow-emerald-500/10
           hover:border-emerald-500/40"
          >
            <div
              class="pointer-events-none absolute -top-16 -right-16 h-44 w-44 rounded-full
             bg-emerald-500/20 blur-3xl opacity-0 transition-opacity duration-300
             group-hover:opacity-100"
              aria-hidden="true"
            >
            </div>

            <div
              class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-xl
             bg-emerald-500/12 text-emerald-600 dark:text-emerald-400
             border border-emerald-500/15
             transition-transform duration-300 group-hover:scale-[1.05]"
              aria-hidden="true"
            >
              <!-- Bolt icon -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                class="h-6 w-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M13 2L3 14h7l-1 8 10-12h-7l1-8z"></path>
              </svg>
            </div>

            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
              {t(lang, "home.work.cards.consistency.title")}
            </h3>
            <p class="mt-2 text-gray-600 dark:text-gray-300 leading-relaxed">
              {t(lang, "home.work.cards.consistency.text")}
            </p>

            <div
              class="mt-4 h-px w-full bg-linear-to-r from-transparent via-emerald-500/25 to-transparent
             opacity-0 transition-opacity duration-300 group-hover:opacity-100"
              aria-hidden="true"
            >
            </div>
          </article>
        </Reveal>

        <!-- Communication -->
        <Reveal delay={220}>
          <article
            class="group relative overflow-hidden rounded-2xl
           border border-gray-200/70 dark:border-white/10
