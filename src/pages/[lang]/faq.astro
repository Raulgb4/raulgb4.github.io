      <h1
        class="text-4xl md:text-5xl font-bold tracking-tight leading-snug
         bg-linear-to-r from-emerald-400 via-teal-400 to-green-500
         bg-clip-text text-transparent"
      >
        {t(lang, "faq.title")}
      </h1>

      <p
        class="mt-5 text-lg md:text-xl leading-relaxed
      text-gray-600 dark:text-gray-300"
      >
        {t(lang, "faq.subtitle")}
      </p>
    </Reveal>

    <Reveal delay={120}>
      <details
        class="rounded-lg border border-gray-200 dark:border-gray-700 p-6"
      >
        <summary class="cursor-pointer text-lg md:text-xl font-medium">
          {t(lang, "faq.q1.q")}
        </summary>
        <p
          class="mt-4 text-base md:text-lg leading-relaxed text-gray-600 dark:text-gray-300"
