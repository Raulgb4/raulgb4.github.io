---

<!--
  Certifications.astro
  --------------------
  Internationalized certifications page that showcases completed courses
  and credentials in a structured, visually rich layout. It leverages
  shared layout and reveal animations, supports per-language content,
  and presents certification details such as provider, description,
  skills, and external verification links.
-->
<Layout lang={lang} pageSeo={pageSeo}>
  <section class="max-w-5xl mx-auto px-4 py-20 space-y-16">
    <!-- PAGE TITLE -->
    <header class="max-w-3xl mx-auto text-center">
      <Reveal delay={0}>
        <h1
          class="text-4xl md:text-5xl font-bold tracking-tight
             leading-[1.15] pb-1
             bg-linear-to-r from-emerald-400 via-teal-400 to-green-500
             bg-clip-text text-transparent"
        >
          {t(lang, "certs.title")}
        </h1>
      </Reveal>

      <Reveal delay={140}>
        <p
          class="mt-5 text-lg md:text-xl leading-relaxed text-gray-600 dark:text-gray-300"
        >
          {t(lang, "certs.subtitle")}
        </p>
      </Reveal>
    </header>

    <!-- CERTIFICATIONS -->
    <section class="space-y-6">
      <!-- Grid -->
      <div class="grid gap-6">
        {
          certifications.map((c, idx) => (
            <Reveal delay={Math.min(idx * 50, 300)}>
              <article
                class="group relative overflow-hidden rounded-2xl
           border border-emerald-500/25
           bg-white/60 dark:bg-white/5 backdrop-blur
           p-7 shadow-sm transition-all duration-300
           hover:-translate-y-1 hover:shadow-lg hover:shadow-emerald-500/20
           hover:border-emerald-400/60"
              >
                {/* Top row: provider + date */}
                <div class="flex items-start justify-between gap-4">
                  <div class="flex items-center gap-4 min-w-0">
                    <div
                      class="h-14 w-14 md:h-16 md:w-16
                 shrink-0 rounded-xl
                 border border-emerald-500/20
                 bg-white/90 dark:bg-white/10
                 flex items-center justify-center
                 p-1.5 md:p-1"
                    >
                      <img
                        src={c.providerLogo}
                        alt={`${c.provider} logo`}
                        class="max-h-full max-w-full object-contain scale-125"
                        loading="lazy"
                      />
                    </div>

                    <div class="min-w-0">
                      <p class="text-lg md:text-xl font-semibold text-gray-900 dark:text-white truncate">
                        {c.provider}
                      </p>
                      <p class="text-base text-gray-500 dark:text-gray-400">
                        {c.dateLabel}
                      </p>
                    </div>
                  </div>

                  <span
                    class="shrink-0 inline-flex items-center rounded-full px-3 py-1.5
               text-sm font-medium
               border border-emerald-500/25
               bg-emerald-500/10 text-emerald-500"
                  >
                    {t(lang, "certs.badge")}
                  </span>
                </div>

                {/* Title */}
                <h3 class="mt-5 text-xl md:text-2xl font-semibold tracking-tight text-gray-900 dark:text-white">
                  {c.title}
                </h3>

                {/* Description */}
                <p class="mt-4 text-base md:text-lg leading-relaxed text-gray-600 dark:text-gray-300">
                  {c.description}
                </p>

                {/* Skills */}
                <div class="mt-6 flex flex-wrap gap-2">
                  {c.skills.map((s) => (
                    <span
                      class="inline-flex items-center rounded-full px-3 py-1.5
                 text-sm font-medium
                 border border-emerald-500/25
                 bg-white/60 dark:bg-white/5
                 text-gray-700 dark:text-gray-200"
                    >
                      {s}
                    </span>
                  ))}
                </div>

                {/* CTA */}
                <div class="mt-7 flex">
                  <a
                    href={c.certificateUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center justify-center gap-2
               rounded-lg px-5 py-2.5
               text-base font-semibold
               text-emerald-400
               border border-emerald-500/40
               transition-all duration-300
               hover:bg-emerald-500/10 hover:-translate-y-0.5
               hover:border-emerald-400"
                  >
                    {t(lang, "certs.view")}
                    <svg
                      class="inline-block h-3.5 w-3.5 ml-1 align-text-top"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <path d="M7 17L17 7" />
                      <path d="M7 7h10v10" />
                    </svg>
                  </a>
                </div>
              </article>
            </Reveal>
          ))
        }
      </div>
    </section>
  </section>
</Layout>
