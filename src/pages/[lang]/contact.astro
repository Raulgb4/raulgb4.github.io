---
import Layout from "../../layouts/Layout.astro";
import Reveal from "../../components/Reveal.astro";
import { LANGS, type Lang, t } from "../../i18n";

export async function getStaticPaths() {
  return LANGS.map((lang) => ({ params: { lang } }));
}

const lang = Astro.params.lang as Lang;

// ✅ SEO por página
const pageSeo = {
  en: {
    title: "Contact | Raúl García Balongo",
    description:
      "Get in touch to discuss opportunities, collaborations, or professional projects related to data and software engineering.",
  },
  es: {
    title: "Contacto | Raúl García Balongo",
    description:
      "Ponte en contacto para hablar sobre oportunidades, colaboraciones o proyectos profesionales relacionados con datos y desarrollo de software.",
  },
};
---

<Layout lang={lang} pageSeo={pageSeo}>
  <section class="max-w-5xl mx-auto px-4 py-16 space-y-10">
    <!-- Title -->
    <Reveal
      as="header"
      delay={0}
      class="relative mb-8 max-w-3xl mx-auto text-center"
    >
      <!-- Decorative tech dot -->
      <div
        class="absolute -top-8 left-1/2 -translate-x-1/2
      h-4 w-4 rounded-full
      bg-emerald-400/80
      shadow-[0_0_25px_rgba(52,211,153,0.7)]"
        aria-hidden="true"
      >
      </div>

      <h1
        class="text-4xl md:text-5xl font-bold tracking-tight
      bg-linear-to-r from-emerald-400 via-teal-400 to-green-500
      bg-clip-text text-transparent"
      >
        {t(lang, "contact.title")}
      </h1>

      <p
        class="mt-6 text-lg md:text-xl leading-relaxed
      text-gray-600 dark:text-gray-300"
      >
        {t(lang, "contact.subtitle")}
      </p>
    </Reveal>

    <section class="flex flex-col items-center gap-12">
      <!-- Contact Info -->
      <Reveal delay={140} class="flex justify-center w-full">
        <div
          class="w-full max-w-4xl
        rounded-2xl border border-gray-200 dark:border-white/10
        bg-white/60 dark:bg-white/5 backdrop-blur p-7"
        >
          <div class="flex items-center justify-between gap-6">
            <h2 class="text-2xl font-semibold text-gray-900 dark:text-white">
              {t(lang, "contact.infoTitle")}
            </h2>

            <!-- Social icons -->
            <div class="flex items-center gap-3">
              <!-- LinkedIn -->
              <a
                href="https://www.linkedin.com/in/ra%C3%BAl-garc%C3%ADa-balongo-865948350/"
                target="_blank"
                rel="noreferrer"
                aria-label="LinkedIn"
                class="inline-flex h-12 w-12 items-center justify-center rounded-full
             bg-emerald-500/10 ring-1 ring-emerald-500/20
             hover:bg-emerald-500/15 hover:ring-emerald-500/35
             transition"
              >
                <img
                  src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/linkedin/linkedin-original.svg"
                  alt="LinkedIn"
                  class="h-6 w-6"
                />
              </a>

              <!-- GitHub -->
              <a
                href="https://github.com/Raulgb4"
                target="_blank"
                rel="noreferrer"
                aria-label="GitHub"
                class="inline-flex h-12 w-12 items-center justify-center rounded-full
             bg-emerald-500/10 ring-1 ring-emerald-500/20
             hover:bg-emerald-500/15 hover:ring-emerald-500/35
             transition"
              >
                <img
                  src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/github/github-original.svg"
                  alt="GitHub"
                  class="h-6 w-6 dark:invert"
                />
              </a>
            </div>
          </div>

          <p
            class="mt-3 text-lg leading-relaxed text-gray-600 dark:text-gray-300"
          >
            {t(lang, "contact.cta")}
          </p>

          <!-- Info items -->
          <div class="mt-7 space-y-5">
            <!-- Email -->
            <Reveal delay={220}>
              <div class="flex items-start gap-4">
                <div
                  class="flex h-12 w-12 items-center justify-center rounded-full
                bg-emerald-500/10 text-emerald-500"
                >
                  <!-- Mail icon (FIX) -->
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                    class="h-6 w-6 block"
                    aria-hidden="true"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M21.75 6.75v10.5A2.25 2.25 0 0 1 19.5 19.5h-15A2.25 2.25 0 0 1 2.25 17.25V6.75A2.25 2.25 0 0 1 4.5 4.5h15a2.25 2.25 0 0 1 2.25 2.25Z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M21.75 7.5 12 13.5 2.25 7.5"></path>
                  </svg>
                </div>

                <div class="min-w-0">
                  <div class="font-semibold text-gray-900 dark:text-white">
                    {t(lang, "common.email")}
                  </div>
                  <a
                    href="mailto:raulgarciabalongoes@gmail.com"
                    class="text-gray-600 dark:text-gray-300
                  hover:text-emerald-600 dark:hover:text-emerald-400
                  transition-colors break-all"
                  >
                    raulgarciabalongoes@gmail.com
                  </a>
                </div>
              </div>
            </Reveal>

            <!-- Location -->
            <Reveal delay={300}>
              <div class="flex items-start gap-4">
                <div
                  class="flex h-12 w-12 items-center justify-center rounded-full
                bg-emerald-500/10 text-emerald-500"
                >
                  <!-- Map pin icon -->
                  <!-- Map pin icon (FIX) -->
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                    class="h-6 w-6 block"
                    aria-hidden="true"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z"
                    ></path>
                  </svg>
                </div>

                <div class="min-w-0 w-full">
                  <div class="font-semibold text-gray-900 dark:text-white">
                    {t(lang, "common.location")}
                  </div>

                  <p class="mt-1 text-gray-600 dark:text-gray-300">
                    Urb. La Cornisa, Avd. Europa, 11204, Algeciras, Cádiz, Spain
                  </p>

                  <div
                    class="mt-4 overflow-hidden rounded-xl
                  border border-gray-200 dark:border-white/10
                  shadow-sm transition
                  hover:shadow-lg hover:shadow-emerald-500/10"
                  >
                    <iframe
                      title="Map location"
                      src="https://www.google.com/maps?q=36.1325,-5.4475&z=7&output=embed"
                      class="h-52 w-full"
                      loading="lazy"></iframe>
                  </div>
                </div>
              </div>
            </Reveal>
          </div>
        </div>
      </Reveal>
    </section>
  </section>
</Layout>
