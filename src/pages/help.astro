---
import Layout from "../layouts/Layout.astro";

import {
  ChartBarIcon,
  CubeTransparentIcon,
  Cog6ToothIcon,
  ChatBubbleLeftRightIcon,
} from "@heroicons/react/24/outline";
import Reveal from "../components/Reveal.astro";
---

<Layout>
  <section class="max-w-7xl mx-auto px-4 py-20">
    <!-- Title -->
    <Reveal as="header" class="mb-12 max-w-3xl mx-auto text-center" delay={0}>
      <h1
        class="text-4xl md:text-5xl font-bold tracking-tight
           leading-[1.15] pb-1
           bg-gradient-to-r from-emerald-400 via-teal-400 to-green-500
           bg-clip-text text-transparent"
      >
        Turning Data Into Impact
      </h1>

      <Reveal delay={120}>
        <p
          class="mt-5 text-lg md:text-xl leading-relaxed
             text-gray-600 dark:text-gray-300"
        >
          A practical, structured approach to building data-driven solutions
          that deliver real value.
        </p>
      </Reveal>
    </Reveal>

    <!-- Cards -->
    <div class="mt-12 grid gap-6 md:grid-cols-2 lg:grid-cols-4">
      <!-- Card 1 -->
      <Reveal delay={220}>
        <article
          class="group rounded-xl border border-emerald-500/30 bg-white/60 dark:bg-white/5 backdrop-blur
             p-7 shadow-sm transition-all duration-300
             hover:-translate-y-1 hover:border-emerald-400/60 hover:shadow-emerald-500/20 hover:shadow-lg"
        >
          <div
            class="mb-5 inline-flex h-12 w-12 items-center justify-center rounded-lg
               bg-emerald-500/15 text-emerald-500"
            aria-hidden="true"
          >
            <ChartBarIcon
              class="h-7 w-7 transition-transform duration-300 group-hover:scale-110"
            />
          </div>

          <h2 class="text-xl font-semibold mb-3">Data Analysis & BI</h2>

          <p
            class="text-base md:text-lg leading-relaxed text-gray-600 dark:text-gray-300"
          >
            I help transform raw data into actionable insights through analysis,
            visualization, and clear interpretation using Python, SQL, Power BI,
            Tableau, and Spark.
          </p>
        </article>
      </Reveal>

      <!-- Card 2 -->
      <Reveal delay={310}>
        <article
          class="group rounded-xl border border-emerald-500/30 bg-white/60 dark:bg-white/5 backdrop-blur
             p-7 shadow-sm transition-all duration-300
             hover:-translate-y-1 hover:border-emerald-400/60 hover:shadow-emerald-500/20 hover:shadow-lg"
        >
          <div
            class="mb-5 inline-flex h-12 w-12 items-center justify-center rounded-lg
               bg-emerald-500/15 text-emerald-500"
            aria-hidden="true"
          >
            <CubeTransparentIcon
              class="h-7 w-7 transition-transform duration-300 group-hover:scale-110"
            />
          </div>

          <h2 class="text-xl font-semibold mb-3">Data-Oriented Development</h2>

          <p
            class="text-base md:text-lg leading-relaxed text-gray-600 dark:text-gray-300"
          >
            I design software solutions where data is central: from collection
            and processing to analysis and visualization, focusing on
            maintainability and scalable architectures.
          </p>
        </article>
      </Reveal>

      <!-- Card 3 -->
      <Reveal delay={400}>
        <article
          class="group rounded-xl border border-emerald-500/30 bg-white/60 dark:bg-white/5 backdrop-blur
             p-7 shadow-sm transition-all duration-300
             hover:-translate-y-1 hover:border-emerald-400/60 hover:shadow-emerald-500/20 hover:shadow-lg"
        >
          <div
            class="mb-5 inline-flex h-12 w-12 items-center justify-center rounded-lg
               bg-emerald-500/15 text-emerald-500"
            aria-hidden="true"
          >
            <Cog6ToothIcon
              class="h-7 w-7 transition-transform duration-300 group-hover:rotate-6"
            />
          </div>

          <h2 class="text-xl font-semibold mb-3">
            Data Processing & Automation
          </h2>

          <p
            class="text-base md:text-lg leading-relaxed text-gray-600 dark:text-gray-300"
          >
            I automate extraction, transformation, and analysis workflows to
            reduce manual effort and improve efficiency, including pipelines and
            cloud integration (Azure).
          </p>
        </article>
      </Reveal>

      <!-- Card 4 -->
      <Reveal delay={490}>
        <article
          class="group rounded-xl border border-emerald-500/30 bg-white/60 dark:bg-white/5 backdrop-blur
             p-7 shadow-sm transition-all duration-300
             hover:-translate-y-1 hover:border-emerald-400/60 hover:shadow-emerald-500/20 hover:shadow-lg"
        >
          <div
            class="mb-5 inline-flex h-12 w-12 items-center justify-center rounded-lg
               bg-emerald-500/15 text-emerald-500"
            aria-hidden="true"
          >
            <ChatBubbleLeftRightIcon
              class="h-7 w-7 transition-transform duration-300 group-hover:scale-110"
            />
          </div>

          <h2 class="text-xl font-semibold mb-3">
            Communication & Problem Solving
          </h2>

          <p
            class="text-base md:text-lg leading-relaxed text-gray-600 dark:text-gray-300"
          >
            I translate technical analyses into clear and meaningful
            explanations, bridging technical and non-technical stakeholders with
            structured, results-oriented problem solving.
          </p>
        </article>
      </Reveal>
    </div>

    <!-- Process / How I Work -->
    <div class="mt-16">
      <Reveal as="header" class="mb-12 max-w-3xl mx-auto text-center" delay={0}>
        <h2
          class="text-4xl md:text-5xl font-bold tracking-tight
             leading-[1.15] pb-1
             bg-gradient-to-r from-emerald-400 via-teal-400 to-green-500
             bg-clip-text text-transparent"
        >
          My Approach
        </h2>

        <Reveal delay={120}>
          <p
            class="mt-5 text-lg md:text-xl leading-relaxed
               text-gray-600 dark:text-gray-300"
          >
            A simple, structured workflow to align goals, deliver value, and
            iterate fast.
          </p>
        </Reveal>
      </Reveal>

      <div class="mt-10 relative">
        <!-- Steps -->
        <div class="grid gap-6 lg:grid-cols-5">
          <!-- Step 1 -->
          <Reveal delay={260}>
            <div
              class="group relative z-10 rounded-2xl border border-emerald-500/25
               bg-white/60 dark:bg-white/5 backdrop-blur
               p-6 text-center shadow-sm
               transition-all duration-300 ease-out
               hover:-translate-y-1 hover:shadow-lg
               hover:shadow-emerald-500/25
               hover:border-emerald-400/60
               lg:after:content-[''] lg:after:block
               lg:after:absolute lg:after:top-1/2 lg:after:-translate-y-1/2
               lg:after:-right-6 lg:after:w-6 lg:after:h-px
               lg:after:bg-gradient-to-r lg:after:from-emerald-400/40 lg:after:to-emerald-400/40
               lg:after:z-0"
            >
              <div
                class="relative z-20 mx-auto mb-4 inline-flex h-11 w-11 items-center justify-center rounded-full
                 bg-emerald-500/15 text-emerald-500 text-lg font-semibold
                 transition-transform duration-300 group-hover:scale-110"
              >
                1
              </div>

              <h3
                class="text-lg md:text-xl font-semibold text-emerald-500 transition-colors duration-300 group-hover:text-emerald-400"
              >
                Understand
              </h3>

              <p
                class="mt-2 text-base md:text-lg leading-relaxed text-gray-600 dark:text-gray-300"
              >
                Clarify goals, context, constraints, and what “success” looks
                like.
              </p>

              <span
                class="hidden lg:block absolute -right-3 top-1/2 -translate-y-1/2 h-2.5 w-2.5 rounded-full
                 bg-emerald-400/60 shadow-[0_0_18px_rgba(16,185,129,0.25)]"
              ></span>

              <span
                class="pointer-events-none absolute inset-0 rounded-2xl bg-emerald-400/5 opacity-0
                 transition-opacity duration-300 group-hover:opacity-100"
                aria-hidden="true"></span>
            </div>
          </Reveal>

          <!-- Step 2 -->
          <Reveal delay={350}>
            <div
              class="group relative z-10 rounded-2xl border border-emerald-500/25
               bg-white/60 dark:bg-white/5 backdrop-blur
               p-6 text-center shadow-sm
               transition-all duration-300 ease-out
               hover:-translate-y-1 hover:shadow-lg
               hover:shadow-emerald-500/25
               hover:border-emerald-400/60
               lg:after:content-[''] lg:after:block
               lg:after:absolute lg:after:top-1/2 lg:after:-translate-y-1/2
               lg:after:-right-6 lg:after:w-6 lg:after:h-px
               lg:after:bg-gradient-to-r lg:after:from-emerald-400/40 lg:after:to-emerald-400/40
               lg:after:z-0"
            >
              <div
                class="relative z-20 mx-auto mb-4 inline-flex h-11 w-11 items-center justify-center rounded-full bg-emerald-500/15 text-emerald-500 text-lg font-semibold transition-transform duration-300 group-hover:scale-110"
              >
                2
              </div>

              <h3
                class="text-lg md:text-xl font-semibold text-emerald-500 transition-colors duration-300 group-hover:text-emerald-400"
              >
                Plan
              </h3>

              <p
                class="mt-2 text-base md:text-lg leading-relaxed text-gray-600 dark:text-gray-300"
              >
                Define data sources, metrics, scope, and a realistic delivery
                path.
              </p>

              <span
                class="hidden lg:block absolute -right-3 top-1/2 -translate-y-1/2 h-2.5 w-2.5 rounded-full bg-emerald-400/60 shadow-[0_0_18px_rgba(16,185,129,0.25)]"
              ></span>

              <span
                class="pointer-events-none absolute inset-0 rounded-2xl bg-emerald-400/5 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
                aria-hidden="true"></span>
            </div>
          </Reveal>

          <!-- Step 3 -->
          <Reveal delay={440}>
            <div
              class="group relative z-10 rounded-2xl border border-emerald-500/25
               bg-white/60 dark:bg-white/5 backdrop-blur
               p-6 text-center shadow-sm
               transition-all duration-300 ease-out
               hover:-translate-y-1 hover:shadow-lg
               hover:shadow-emerald-500/25
               hover:border-emerald-400/60
               lg:after:content-[''] lg:after:block
               lg:after:absolute lg:after:top-1/2 lg:after:-translate-y-1/2
               lg:after:-right-6 lg:after:w-6 lg:after:h-px
               lg:after:bg-gradient-to-r lg:after:from-emerald-400/40 lg:after:to-emerald-400/40
               lg:after:z-0"
            >
              <div
                class="relative z-20 mx-auto mb-4 inline-flex h-11 w-11 items-center justify-center rounded-full bg-emerald-500/15 text-emerald-500 text-lg font-semibold transition-transform duration-300 group-hover:scale-110"
              >
                3
              </div>

              <h3
                class="text-lg md:text-xl font-semibold text-emerald-500 transition-colors duration-300 group-hover:text-emerald-400"
              >
                Build
              </h3>

              <p
                class="mt-2 text-base md:text-lg leading-relaxed text-gray-600 dark:text-gray-300"
              >
                Implement analysis, pipelines, dashboards, or features with
                clean code.
              </p>

              <span
                class="hidden lg:block absolute -right-3 top-1/2 -translate-y-1/2 h-2.5 w-2.5 rounded-full bg-emerald-400/60 shadow-[0_0_18px_rgba(16,185,129,0.25)]"
              ></span>

              <span
                class="pointer-events-none absolute inset-0 rounded-2xl bg-emerald-400/5 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
                aria-hidden="true"></span>
            </div>
          </Reveal>

          <!-- Step 4 -->
          <Reveal delay={530}>
            <div
              class="group relative z-10 rounded-2xl border border-emerald-500/25
               bg-white/60 dark:bg-white/5 backdrop-blur
               p-6 text-center shadow-sm
               transition-all duration-300 ease-out
               hover:-translate-y-1 hover:shadow-lg
               hover:shadow-emerald-500/25
               hover:border-emerald-400/60
               lg:after:content-[''] lg:after:block
               lg:after:absolute lg:after:top-1/2 lg:after:-translate-y-1/2
               lg:after:-right-6 lg:after:w-6 lg:after:h-px
               lg:after:bg-gradient-to-r lg:after:from-emerald-400/40 lg:after:to-emerald-400/40
               lg:after:z-0"
            >
              <div
                class="relative z-20 mx-auto mb-4 inline-flex h-11 w-11 items-center justify-center rounded-full bg-emerald-500/15 text-emerald-500 text-lg font-semibold transition-transform duration-300 group-hover:scale-110"
              >
                4
              </div>

              <h3
                class="text-lg md:text-xl font-semibold text-emerald-500 transition-colors duration-300 group-hover:text-emerald-400"
              >
                Validate
              </h3>

              <p
                class="mt-2 text-base md:text-lg leading-relaxed text-gray-600 dark:text-gray-300"
              >
                Check correctness, edge cases, performance, and stakeholder
                alignment.
              </p>

              <span
                class="hidden lg:block absolute -right-3 top-1/2 -translate-y-1/2 h-2.5 w-2.5 rounded-full bg-emerald-400/60 shadow-[0_0_18px_rgba(16,185,129,0.25)]"
              ></span>

              <span
                class="pointer-events-none absolute inset-0 rounded-2xl bg-emerald-400/5 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
                aria-hidden="true"></span>
            </div>
          </Reveal>

          <!-- Step 5 (sin tramo hacia la derecha) -->
          <Reveal delay={620}>
            <div
              class="group relative z-10 rounded-2xl border border-emerald-500/25
               bg-white/60 dark:bg-white/5 backdrop-blur
               p-6 text-center shadow-sm
               transition-all duration-300 ease-out
               hover:-translate-y-1 hover:shadow-lg
               hover:shadow-emerald-500/25
               hover:border-emerald-400/60"
            >
              <div
                class="relative z-20 mx-auto mb-4 inline-flex h-11 w-11 items-center justify-center rounded-full bg-emerald-500/15 text-emerald-500 text-lg font-semibold transition-transform duration-300 group-hover:scale-110"
              >
                5
              </div>

              <h3
                class="text-lg md:text-xl font-semibold text-emerald-500 transition-colors duration-300 group-hover:text-emerald-400"
              >
                Deliver
              </h3>

              <p
                class="mt-2 text-base md:text-lg leading-relaxed text-gray-600 dark:text-gray-300"
              >
                Document, hand off clearly, and iterate based on feedback if
                needed.
              </p>

              <span
                class="pointer-events-none absolute inset-0 rounded-2xl bg-emerald-400/5 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
                aria-hidden="true"></span>
            </div>
          </Reveal>
        </div>
      </div>
    </div>
  </section>
</Layout>
