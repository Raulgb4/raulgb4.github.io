---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section class="max-w-5xl mx-auto px-4 py-20 space-y-16">
    <!-- Title -->
    <header class="relative mb-14 max-w-3xl mx-auto text-center">
      <!-- Decorative tech dot -->
      <div
        class="absolute -top-8 left-1/2 -translate-x-1/2
           h-4 w-4 rounded-full
           bg-emerald-400/80
           shadow-[0_0_25px_rgba(52,211,153,0.7)]"
        aria-hidden="true"
      >
      </div>

      <h1
        class="text-4xl md:text-5xl font-bold tracking-tight
           bg-gradient-to-r from-emerald-400 via-teal-400 to-green-500
           bg-clip-text text-transparent"
      >
        Let’s Talk
      </h1>

      <p
        class="mt-6 text-lg md:text-xl leading-relaxed
           text-gray-600 dark:text-gray-300"
      >
        I’m excited to collaborate on innovative projects or discuss your next
        idea. Reach out via email or LinkedIn.
      </p>
    </header>

    <section class="flex flex-col items-center gap-12">
      <!-- Contact Info -->
      <section class="flex justify-center">
        <div
          class="w-full max-w-4xl
         rounded-2xl border border-gray-200 dark:border-white/10
         bg-white/60 dark:bg-white/5 backdrop-blur p-7"
        >
          <h2 class="text-2xl font-semibold">Contact Information</h2>
          <p
            class="mt-3 text-lg leading-relaxed text-gray-600 dark:text-gray-300"
          >
            Feel free to reach out if you're interested in collaborating. I'm
            always open to new opportunities and challenges.
          </p>

          <!-- Info items -->
          <div class="mt-7 space-y-5">
            <!-- Email -->
            <div class="flex items-start gap-4">
              <div
                class="flex h-12 w-12 items-center justify-center rounded-full bg-emerald-500/10 text-emerald-500"
              >
                <!-- Mail icon -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  class="h-6 w-6"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15A2.25 2.25 0 012.25 17.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15A2.25 2.25 0 002.25 6.75m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.43 4.457a2.25 2.25 0 01-2.31 0L3.32 8.91A2.25 2.25 0 012.25 6.993V6.75"
                  ></path>
                </svg>
              </div>

              <div class="min-w-0">
                <div class="font-semibold text-gray-900 dark:text-white">
                  Email
                </div>
                <a
                  href="mailto:raulgarciabalongoes@gmail.com"
                  class="text-gray-600 dark:text-gray-300 hover:text-emerald-600 dark:hover:text-emerald-400 transition-colors break-all"
                >
                  raulgarciabalongoes@gmail.com
                </a>
              </div>
            </div>

            <!-- Location -->
            <div class="flex items-start gap-4">
              <div
                class="flex h-12 w-12 items-center justify-center rounded-full
           bg-emerald-500/10 text-emerald-500"
              >
                <!-- Map pin icon -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  class="h-6 w-6"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M12 21s7-4.35 7-11a7 7 0 10-14 0c0 6.65 7 11 7 11z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M12 10.5a2.25 2.25 0 100-4.5 2.25 2.25 0 000 4.5z"
                  ></path>
                </svg>
              </div>

              <div class="min-w-0 w-full">
                <div class="font-semibold text-gray-900 dark:text-white">
                  Location
                </div>

                <p class="mt-1 text-gray-600 dark:text-gray-300">
                  Urb. La Cornisa, Avd. Europa, 11204, Algeciras, Cádiz, Spain
                </p>

                <!-- Map -->
                <div
                  class="mt-4 overflow-hidden rounded-xl border border-gray-200 dark:border-white/10
             shadow-sm transition hover:shadow-lg hover:shadow-emerald-500/10
             dark:[&_iframe]:invert dark:[&_iframe]:hue-rotate-180 dark:[&_iframe]:contrast-90"
                >
                  <iframe
                    title="Map location"
                    src="https://www.google.com/maps?q=36.1325,-5.4475&z=7&output=embed"
                    class="h-52 w-full"
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                  >
                  </iframe>
                </div>
              </div>
            </div>
          </div>

          <!-- Social -->
          <div class="mt-8">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
              Stay Connected
            </h3>

            <div class="mt-4 flex items-center gap-3">
              <!-- LinkedIn (original logo) -->
              <a
                href="https://www.linkedin.com/in/ra%C3%BAl-garc%C3%ADa-balongo-865948350/"
                target="_blank"
                rel="noreferrer"
                aria-label="LinkedIn"
                class="inline-flex h-11 w-11 items-center justify-center rounded-full
                 bg-emerald-500/10 text-emerald-600 ring-1 ring-emerald-500/20
                 hover:bg-emerald-500/15 hover:ring-emerald-500/35 transition"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="h-5 w-5"
                  aria-hidden="true"
                >
                  <path
                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037
              -1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046
              c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.266 2.37 4.266 5.455v6.286z
              M5.337 7.433c-1.144 0-2.063-.926-2.063-2.065
              0-1.138.92-2.063 2.063-2.063
              1.14 0 2.064.925 2.064 2.063
              0 1.139-.925 2.065-2.064 2.065z
              M7.119 20.452H3.555V9h3.564v11.452z
              M22.225 0H1.771C.792 0 0 .774 0 1.729v20.542
              C0 23.227.792 24 1.771 24h20.451
              C23.2 24 24 23.227 24 22.271V1.729
              C24 .774 23.2 0 22.222 0z"
                  ></path>
                </svg>
              </a>

              <!-- GitHub -->
              <a
                href="https://github.com/Raulgb4"
                target="_blank"
                rel="noreferrer"
                aria-label="GitHub"
                class="inline-flex h-11 w-11 items-center justify-center rounded-full
                 bg-emerald-500/10 text-emerald-600 ring-1 ring-emerald-500/20
                 hover:bg-emerald-500/15 hover:ring-emerald-500/35 transition"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="h-5 w-5"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    clip-rule="evenodd"
                    d="M12 2C6.477 2 2 6.58 2 12.238c0 4.525 2.865 8.362 6.839 9.718.5.096.682-.22.682-.487 0-.241-.009-.88-.013-1.728-2.782.62-3.369-1.37-3.369-1.37-.455-1.183-1.11-1.498-1.11-1.498-.907-.637.069-.624.069-.624 1.003.073 1.531 1.056 1.531 1.056.892 1.563 2.341 1.112 2.91.85.091-.667.349-1.112.635-1.368-2.22-.26-4.555-1.14-4.555-5.071 0-1.12.39-2.036 1.03-2.754-.103-.26-.447-1.309.098-2.729 0 0 .84-.275 2.75 1.052A9.33 9.33 0 0112 6.844c.85.004 1.705.118 2.505.345 1.909-1.327 2.748-1.052 2.748-1.052.546 1.42.202 2.469.1 2.729.64.718 1.028 1.634 1.028 2.754 0 3.942-2.339 4.808-4.566 5.063.359.316.678.94.678 1.894 0 1.368-.013 2.472-.013 2.808 0 .269.18.588.688.486C19.137 20.596 22 16.76 22 12.238 22 6.58 17.523 2 12 2z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </section>
    </section>
  </section>
</Layout>
